<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.BePerfect" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowBackground">@drawable/gradient_background</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background</item>


    </style>

    <style name="Theme.BePerfect" parent="Base.Theme.BePerfect" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Если используете Material Components -->
    <style name="NumberPickerTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Цвет текста -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Цвет разделителей (линий между числами) -->
        <item name="colorControlNormal">@color/black</item>
        <!-- Цвет выделенного (текущего) элемента -->
        <item name="colorControlActivated">@color/white</item>
        <!-- Фон (если нужно) -->
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>